<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/LayoutNewScore"
    android:background="@drawable/highscore"
    android:layout_alignParentTop="true"
    tools:context="com.pmdm.invasoresespaciales.activities.NewScoreActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Score"
        android:id="@+id/highScore2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textColor="#3cff00"
        android:typeface="monospace"
        android:textSize="32dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Position: 9"
        android:id="@+id/position"
        android:layout_marginTop="20dp"
        android:textColor="#3cff00"
        android:typeface="monospace"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/highScore2"
        android:layout_alignLeft="@+id/highScore2"
        android:layout_alignStart="@+id/highScore2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level: 14"
        android:id="@+id/level"
        android:layout_marginTop="20dp"
        android:textColor="#3cff00"
        android:typeface="monospace"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/position"
        android:layout_alignLeft="@+id/position"
        android:layout_alignStart="@+id/position" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Points: 1400"
        android:id="@+id/points"
        android:layout_marginTop="20dp"
        android:textColor="#3cff00"
        android:typeface="monospace"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/level"
        android:layout_alignLeft="@+id/level"
        android:layout_alignStart="@+id/level" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:id="@+id/name"
        android:layout_marginTop="20dp"
        android:textColor="#3cff00"
        android:typeface="monospace"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/points"
        android:layout_alignLeft="@+id/points"
        android:layout_alignStart="@+id/points" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtName"
        android:capitalize="characters"
        android:editable="true"
        android:maxLength="3"
        android:text="AAA"
        android:textColor="#3cff00"
        android:layout_alignBottom="@+id/name"
        android:layout_toRightOf="@+id/level"
        android:layout_toEndOf="@+id/level"
        android:focusable="true"
        android:enabled="true" />

</RelativeLayout>
