<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/LayoutSetUp"
    android:background="@drawable/highscore"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pmdm.invasoresespaciales.activities.SetUpActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Up"
        android:id="@+id/textView"
        android:layout_marginTop="100dp"
        android:textColor="#3cff00"
        android:typeface="monospace"
        android:textSize="32dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sound"
        android:id="@+id/textView3"
        android:layout_marginTop="20dp"
        android:textColor="#3cff00"
        android:typeface="monospace"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switchSound"
        android:layout_marginTop="10dp"
        android:textColor="#3cff00"
        android:typeface="monospace"
        android:textSize="20dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Controls"
        android:id="@+id/textView4"
        android:layout_marginTop="20dp"
        android:textColor="#3cff00"
        android:typeface="monospace"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/switchSound"
        android:layout_centerHorizontal="true"
        android:password="false" />

    <RadioGroup
        android:id="@+id/radioControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buttons"
            android:layout_marginTop="10dp"
            android:textColor="#3cff00"
            android:typeface="monospace"
            android:textSize="20dp"
            android:id="@+id/radioButtons"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:checked="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#3cff00"
            android:typeface="monospace"
            android:textSize="20dp"
            android:text="Joystick"
            android:id="@+id/radioJoystick"
            android:layout_below="@+id/radioButtons"
            android:layout_alignLeft="@+id/radioButtons"
            android:layout_alignStart="@+id/radioButtons" />

    </RadioGroup>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioControls"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:onClick="btnCancel"
            android:typeface="monospace"
            android:textSize="20dp"
            android:id="@+id/button1"
            android:layout_marginTop="36dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:onClick="btnDone"
            android:typeface="monospace"
            android:textSize="20dp"
            android:id="@+id/button2"
            android:layout_marginTop="36dp" />

    </LinearLayout>

</RelativeLayout>
